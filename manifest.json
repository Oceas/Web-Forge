{
  "manifest_version": 3,
  "name": "Web Forge",
  "version": "0.1",
  "description": "Web tools extension",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "browsingData",
    "webNavigation",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/web-forge.png"
    }
  },
  "icons": {
    "16": "images/web-forge.png"
  },
  "background": {
    "service_worker": "background.js"
  }
} 